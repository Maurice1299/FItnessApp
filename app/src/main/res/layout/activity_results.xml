<?xml version="1.0" encoding="utf-8"?>
<!-- activity_results.xml allows the user to view their results including their total workout time,
total calories burned, and their calculated BMI. The user can click on the Home button to go back
 to the Main Activity screen, click on the Select Another Workout button to select a different workout
 from the Select Workout screen, or click on the Start the Same Workout to start the same workout
 from the Workout Session screen. -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results">

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="Home"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/rTxt"
        android:text="Congratulations! You Finished Your Workout. Here Are Your Results:"
        android:textColor="@color/primaryColor"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/rTxt"
        android:id="@+id/totalWorkoutTime"
        android:text="[Total Workout Time]"
        android:textColor="@color/primaryColor"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/totalWorkoutTime"
        android:id="@+id/totalCaloriesBurned"
        android:text="[Total Calories Burned]"
        android:textColor="@color/primaryColor"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/totalCaloriesBurned"
        android:id="@+id/calculatedBMI"
        android:text="[Calculated BMI]"
        android:textColor="@color/primaryColor"
        android:textSize="18sp"/>

    <Button
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"
        android:id="@+id/selectAnotherWorkout"
        android:text="Select Another Workout"/>

    <Button
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@id/selectAnotherWorkout"
        android:id="@+id/startSameWorkout"
        android:text="Start the Same Workout"/>

</RelativeLayout>