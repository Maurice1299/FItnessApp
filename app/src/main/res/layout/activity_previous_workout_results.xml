<?xml version="1.0" encoding="utf-8"?>
<!-- activity_previous_workout_results.xml allows you to select a type of workout from a drop-down list
and view the corresponding workout results for different users. A user can click on the Home button
to go back to the Main Activity screen or click on the Go Back button to go back to the Select Workout
screen. -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreviousWorkoutResults">

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="Home"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"
        android:text="Here Are Your Previous Workout Results:"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="170dp"
        android:text="Select Type Of Workout:"
        android:textSize="18sp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="240dp"
        android:id="@+id/workoutType"/>

    <ListView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/workoutType"
        android:layout_marginTop="20dp"
        android:id="@+id/LV"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/LV"
        android:layout_marginTop="20dp"
        android:id="@+id/goBack"
        android:text="Go Back"
        android:textSize="18sp"/>

</RelativeLayout>